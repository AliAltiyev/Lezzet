<resources>
	<!-- Base application theme. -->
	<style name="Theme.Lezzet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/toolbar_color</item>
		<item name="colorPrimaryDark">@color/toolbar_color</item>
		<item name="colorAccent">@color/teal_200</item>
	</style>


	//Chip Style

	<style name="CustomChipStyle" parent="@style/Widget.MaterialComponents.Chip.Filter">
		<item name="chipBackgroundColor">@color/bottom_sheet_background_color</item>
		<item name="android:textColor">@color/bottom_sheet_text_color</item>
		<item name="checkedIconTint">@color/bottom_sheet_text_color</item>
	</style>

	//Button Style

	<style name="CustomButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
		<item name="backgroundTint">@color/backgroundColor</item>
	</style>


	<style name="Theme.Lezzet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.Lezzet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>